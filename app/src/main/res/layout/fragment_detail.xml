<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailFragment">

    <ImageView
        app:layout_constraintTop_toTopOf="parent
"       app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="56dp"
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_not_found"
        android:scaleType="centerCrop" />

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/textMain"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:text="Main Information"
        />

    <TextView
        android:id="@+id/textFirstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toStartOf="@+id/editTextFirstName"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMain"
        android:paddingVertical="16dp"
        />

    <EditText
        android:id="@+id/editTextFirstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/textFirstName"
        app:layout_constraintTop_toBottomOf="@+id/textMain"
        android:layout_margin="16dp"
        />


    <TextView
        android:id="@+id/textLastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Last Name"
        app:layout_constraintEnd_toStartOf="@+id/editTextFirstName"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFirstName"
        android:layout_margin="16dp"
        android:paddingVertical="16dp"
        />

    <EditText
        android:id="@+id/editTextLastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/textLastName"
        app:layout_constraintTop_toBottomOf="@+id/editTextFirstName"
        android:layout_margin="16dp"

        />

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/textSubMain"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:text="Sub Information"
        />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Email"
        app:layout_constraintEnd_toStartOf="@+id/editTextEmail"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSubMain"
        android:layout_margin="16dp"
        android:paddingVertical="16dp"

        />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/textEmail"
        app:layout_constraintTop_toBottomOf="@+id/textSubMain"
        android:layout_margin="16dp"

        />


    <TextView
        android:id="@+id/textDob"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DOB"
        app:layout_constraintEnd_toStartOf="@+id/editTextDob"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEmail"
        android:layout_margin="16dp"
        android:paddingVertical="16dp"

        />

    <EditText
        android:id="@+id/editTextDob"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/textDob"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail"
        android:layout_margin="16dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>